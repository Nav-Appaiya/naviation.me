    <body>
        <div class="container">

            <div class="tm-sidebar">
                <img src="img/bg.jpg" alt="Menu top image" class="img-fluid tm-sidebar-image">
                <nav class="tm-main-nav">
                    <ul>
                        <li class="tm-nav-item"><a href="#home" class="tm-nav-item-link">Home</a></li>
                        <li class="tm-nav-item"><a href="#about" class="tm-nav-item-link">About</a></li>
                        <li class="tm-nav-item"><a href="#projects" class="tm-nav-item-link">Projects</a></li>
                        <li class="tm-nav-item"><a href="#contact" class="tm-nav-item-link">Contact</a></li>
                    </ul>
                </nav>
            </div>
            
            <div class="tm-main-content">
                
                <section id="home" class="tm-content-box tm-banner margin-b-10">
                    <div class="tm-banner-inner">
                        <h1 class="tm-banner-title">Nav Appaiya</h1>
                        <p class="tm-banner-text">Webdeveloper & TechGeek </p>    
                    </div>                    
                </section>

                <section id="about">
                    <div class="tm-content-box flex-2-col">

                        <div class="pad flex-item tm-team-description-container">
                            <h2 class="tm-section-title">About me</h2>
                                {{ about.content|raw }}
                        </div>

                        <div class="flex-item">
                            <img src="{{ asset(about.image) }}" alt="about me">
                        </div>

                    </div>
                </section>

                <!-- slider -->
                <section id="projects">
                    <div id="tmCarousel" class="carousel slide tm-content-box" data-ride="carousel">
                        <h2 class="tm-section-title">Projects</h2>
                        <ol class="carousel-indicators">
                            <li data-target="#tmCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#tmCarousel" data-slide-to="1" class=""></li>
                            <li data-target="#tmCarousel" data-slide-to="2" class=""></li>
                        </ol>

                        <div class="carousel-inner" role="listbox">
                            {% for project in projects %}
                            <div class="carousel-item{% if loop.first %} active{% endif %}">
                                <div class="carousel-content">
                                    <div class="flex-item">
                                        <h5 class="tm-section-title">{{ project.title }}</h5>
                                        <p class="tm-section-description carousel-description">
                                            {{ project.description }}
                                            <br>
                                            <br>
                                            <a href="{{ project.link }}">More about this project</a>.</p>
                                    </div>
                                </div>                                
                            </div>
                            {% endfor %}


                        </div>
                        
                    </div>                    
                </section>

                <section class="tm-content-box">
                    <img src="{{ asset('bundles/navsite/img/bg.jpg') }}" alt="Contact image" class="img-fluid">
                    <div id="contact" class="pad">
                        <h2 class="tm-section-title">Contact Me</h2>
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-success">
                                {% for msg in app.session.flashBag.get('success') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}

                        {{ form_start(contactForm, {'attr': {
                            'method' : 'get',
                            'class' : 'contact-form'
                        }}) }}
                            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 form-group-2-col-left">
                                {{ form_widget(contactForm.name, {'attr': {
                                    'class': 'form-control',
                                    'placeholder' : 'Name'
                                }}) }}
                            </div>
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 form-group-2-col-right">
                            {{ form_widget(contactForm.email, {'attr': {
                                'class': 'form-control',
                                'placeholder' : 'Email',
                            }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(contactForm.subject, {'attr': {
                                'class': 'form-control',
                                'placeholder' : 'Subject',
                            }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(contactForm.message, {'attr': {
                                'class': 'form-control',
                                'placeholder' : 'Message or question you want to ask me...',
                                'rows' : 4
                            }}) }}
                        </div>
                        <div class="form-group">
                            <button type="submit" id="contact-submit" class="btn btn-primary submit-btn btn-xs">Submit</button>
                        </div>
                        {{ form_end(contactForm) }}
                    </div>
                    
                </section>  

                <footer class="tm-footer">
                    <p class="text-xs-center">
                        Copyright &copy; 2016 by <a href="http://github.com/nav-appaiya">Nav Appaiya</a></p>
                </footer>

            </div>
             
